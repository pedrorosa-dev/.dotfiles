  [[blocks.segments]]
  background = "#181818"
  foreground = "#ffffff"
  invert_powerline = true
  leading_diamond = " \ue0b6"
  style = "diamond"
  template = " \ue641 {{ .CurrentDate | date .Format }} "
  trailing_diamond = "\ue0b4"
  type = "time"


  [[blocks.segments]]
    template = '{{ .FormattedMs }}'
    foreground = '#a0a0a0'
    background = '#181818'
    type = 'executiontime'
    style = 'diamond'

    [blocks.segments.properties]
      threshold = 5000

[[blocks]]
  type = 'prompt'
  alignment = 'left'
  newline = true

  [[blocks.segments]]
  foreground = "#a0a0a0"
  style = "plain"
  template = "╰─"
  type = "text"


  [[blocks.segments]]
    type = 'text'
    style = 'plain'
    # foreground = '#FFFFFF' # mesma cor do secondary_prompt
    foreground_templates = [
      "{{if gt .Code 0}}#E38073{{end}}",
      "{{if eq .Code 0}}#FFFFFF{{end}}",
    ]   
    background = 'transparent'
    template = '❯'

[transient_prompt]
  foreground_templates = [
    "{{if gt .Code 0}}red{{end}}",
    "{{if eq .Code 0}}magenta{{end}}",
  ]
  background = 'transparent'
  template = '❯ '

[secondary_prompt]
  foreground = '#FFFFFF' # magenta
  background = 'transparent'
  template = '❯❯ '

