  leading_diamond = " \ue0b6"
  trailing_diamond = "\ue0b4"
  style = "diamond"
  template = " 󰛦 {{ .Major }}.{{ .Minor }} "


  [[blocks.segments]]
  type = "rust"
  background = "#181818"
  foreground = "#FFFFFF"
  leading_diamond = " \ue0b6"
  trailing_diamond = "\ue0b4"
  style = "diamond"
  template = "  {{ .Major }}.{{ .Minor }} "


  [[blocks.segments]]
  type = "dart"
  background = "#181818"
  foreground = "#00b4AB"
  leading_diamond = " \ue0b6"
  trailing_diamond = "\ue0b4"
  style = "diamond"
