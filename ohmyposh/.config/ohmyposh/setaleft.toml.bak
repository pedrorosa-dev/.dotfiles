
version = 2
console_title_template = '{{ .Shell }} in {{ .Folder }}'
final_space = true 

[[blocks]]
  type = "prompt"
  alignment = "left"

  [[blocks.segments]]
    type = "os"
    template = "{{.Icon}}"
    background = "#808080"
    foreground = "#FFFFFF" # #9B6BDF
    leading_diamond = "╭─\ue0b6"
    trailing_diamond = "\ue0b4 "
    style = "diamond"

    [properties]
    macos = "mac"

  # [[blocks.segments]]
  # type = "session"
  # background = "#181818"
  # foreground = "#FFFFFF"
  # leading_diamond = "\ue0b6"
  # trailing_diamond = "\ue0b4 "
  # style = "diamond"
  # template = "{{ .UserName }} \u276f"

  [[blocks.segments]]
  type = "path"
  background = "#181818" # #181818 #111111
  foreground = "#FFFFFF" # #3EC669 #9B6BDF
  leading_diamond = "\ue0b6"
  trailing_diamond = "\ue0b4"
  style = "diamond"
  template = "\ue5ff {{ .Path }}"
    [blocks.segments.properties]
      style = 'powerlevel'
      folder_icon = ''
      home_icon = ' '
      max_width = 20
      cycle = ['#9B6BDF', '#a6a3a6', '#9B6BDF'] # 'cyan', 'magenta', 'blue'



  [[blocks.segments]]
    type = "git"
    style = "diamond"
    foreground = "#FFFFFF" # #43CCEA #9B6BDF
    background = "#1A1A1A" # #111111 #181818
    leading_diamond = " \ue0b6"
    trailing_diamond = "\ue0b4"
    foreground_templates = [
      "{{ if or (.Working.Changed) (.Staging.Changed) }}#FFFFFF{{ end }}", # #FFEB3B
      "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#FFCC80{{ end }}",
      "{{ if gt .Ahead 0 }}#B388FF{{ end }}",
      "{{ if gt .Behind 0 }}#B388FB{{ end }}"
    ]
    template = "<#FFFFFF>{{ url .UpstreamIcon .UpstreamURL }}</> {{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }}  <#22d3ee> ?{{.Working.Untracked}}</> ~{{ .Working.Modified }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }}  {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }}<#34d399>  {{ .StashCount }}</>{{ end }}"

    [blocks.segments.properties]
      fetch_status = true
      branch_max_length = 25
      fetch_upstream_icon = true
      truncate_symbol = '…'
      branch_icon = ' '
      commit_icon = '@'


      [properties.untracked_modes]
      "/Users/user/Projects/oh-my-posh/" = "no"


[[blocks]]
  type = "prompt"
  alignment = "right"

  [[blocks.segments]]
  type = "python"
  background = "#181818"
  foreground = "#E4F34A"
  leading_diamond = " \ue0b6"
  trailing_diamond = "\ue0b4"
  style = "diamond"
  template = "  {{ .Major }}.{{ .Minor }} "


