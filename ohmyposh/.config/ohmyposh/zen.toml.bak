version = 2
final_space = true
console_title_template = '{{ .Shell }} in {{ .Folder }}'

[[blocks]]
  type = 'prompt'
  alignment = 'left'

  [[blocks.segments]]
    type = "os"
    style = "plain"
    template = "{{.Icon}}"

    [properties]
    macos = "mac"

  [[blocks.segments]]
    type = 'path'
    background = 'transparent'
    foreground = '#FFFFFF' # blue

    [blocks.segments.properties]
      style = 'powerlevel'
      folder_icon = ''
      home_icon = ' '
      max_width = 20
      cycle = ['cyan', '#a6a3a6', '#9B6BDF'] # cyan, magenta, blue

  [[blocks.segments]]
    type = "git"
    style = "powerline"
    foreground = "#FFFFFF" # green #6C7E5E
    background = "transparent" # transparent
    foreground_templates = [
      "{{ if or (.Working.Changed) (.Staging.Changed) }}#FFFFFF{{ end }}", # #FFEB3B
      "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#FFCC80{{ end }}",
      "{{ if gt .Ahead 0 }}#B388FF{{ end }}",
      "{{ if gt .Behind 0 }}#B388FB{{ end }}"
    ]
    template = "<#FFFFFF>{{ url .UpstreamIcon .UpstreamURL }}</> {{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }}  <#22d3ee> ?{{.Working.Untracked}}</> ~{{ .Working.Modified }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }}  {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }}<#34d399>  {{ .StashCount }}</>{{ end }}"

    [blocks.segments.properties]
      fetch_status = true
      branch_max_length = 25
      fetch_upstream_icon = true
      truncate_symbol = '…'
      branch_icon = ' '
      commit_icon = '@'


      [properties.untracked_modes]
      "/Users/user/Projects/oh-my-posh/" = "no"




[[blocks]]
  type = 'prompt'
  alignment = 'right'

  [[blocks.segments]]
    type = "elixir"
    style = "powerline"
    powerline_symbol = ""
    foreground = "#ffffff"
    background = "#422251"
    template = "  {{ .Major }}.{{ .Minor }} "
  
  [[blocks.segments]]
    type = "node"
    style = "powerline"
    # foreground = "#ffffff"
    # background = "#6CA35E"
    foreground = "#6CA35E"
    template = "  {{ .Major }}.{{ .Minor }} "

  [[blocks.segments]]
    type = "php"
    style = "powerline"
    foreground = "#A872C9"
    # background = "#4063D8"
    template = "  {{ .Major }}.{{ .Minor }} "

  [[blocks.segments]]
    type = "ruby"
    style = "powerline"
    # foreground = "#ffffff"
    # background = "#4063D8"
    foreground = "#CC342D"
    template = "  {{ .Major }}.{{ .Minor }} "

  [[blocks.segments]]
    type = "python"
    style = "powerline"
    # foreground = "#ffffff"
    # background = "#4063D8"
    foreground = "#FFFF00"
    template = "  {{ .Major }}.{{ .Minor }} "

  [[blocks.segments]]
    type = "java"
    style = "powerline"
    # foreground = "#ffffff"
    # background = "#4063D8"
    foreground = "#FF0000"
    template = "  {{ .Major }}.{{ .Minor }} "

  [[blocks.segments]]
    type = "typescript"
    style = "powerline"
    # foreground = "#ffffff"
    # background = "#4063D8"
    foreground = "#007ACC"
    template = " 󰛦 {{ .Major }}.{{ .Minor }} "

  [[blocks.segments]]
    type = "rust"
    style = "powerline"
    # foreground = "#ffffff"
    # background = "#4063D8"
    foreground = "#000000"
    template = "  {{ .Major }}.{{ .Minor }} "

  [[blocks.segments]]
    type = "dart"
    style = "powerline"
    # foreground = "#ffffff"
    # background = "#4063D8"
    foreground = "#00B4AB"
    template = "  {{ .Major }}.{{ .Minor }} "

   [[blocks.segments]]
    type = "status"
    foreground = "#606060" # #00897b #9B6BDF
    foreground_templates = [ "{{ if gt .Code 0 }}#E38073{{ end }}" ]
    template = " " ## 󰀦  

      [blocks.segments.properties]
      always_enabled = true

  [[blocks.segments]]
    type = 'executiontime'
    style = 'plain'
    foreground = 'yellow'
    background = 'transparent'
    template = '{{ .FormattedMs }}'

    [blocks.segments.properties]
      threshold = 5000



[[blocks]]
  type = 'prompt'
  alignment = 'left'
  newline = true

  [[blocks.segments]]
    type = 'text'
    style = 'plain'
    foreground_templates = [
      "{{if gt .Code 0}}#E38073{{end}}",
      "{{if eq .Code 0}}#9B6BDF{{end}}",
    ]   
    background = 'transparent'
    template = '❯'

[transient_prompt]
  foreground_templates = [
    "{{if gt .Code 0}}red{{end}}",
    "{{if eq .Code 0}}magenta{{end}}",
  ]
  background = 'transparent'
  template = '❯ '

[secondary_prompt]
  foreground = '#9B6BDF' # magenta
  background = 'transparent'
  template = '❯❯ '

